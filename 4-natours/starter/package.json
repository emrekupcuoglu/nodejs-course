{
  "name": "natours",
  "version": "1.0.0",
  "description": "Learning node, express, and mongoDB",
  "default": "app.js",
  "targets": {
    "main": false
  },
  "browserslist": "> 0.25%, not dead",
  "scripts": {
    "start": "nodemon server.js",
    "prod": "SET NODE_ENV=production&&nodemon server.js",
