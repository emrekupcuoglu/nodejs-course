    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^6.7.0",
    "helmet": "^6.0.1",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^6.6.5",
    "morgan": "^1.10.0",
    "nodemailer": "^6.8.0",
    "pug": "^3.0.2",
    "regenerator-runtime": "^0.13.11",
